{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
},
  "snippets.ultisnips.directories": [
      "~/.vim/plugged/vim-go/gosnippets",
      "~/.vim/plugged/vim-go/gosnippets/UltiSnips",
      "~/.vim/plugged/vim-go/gosnippets/snippets",
      "~/.vim/plugged/vim-go/gosnippets/minisnip",
],
}
